model UserProgram {
  id                String              @id @default(cuid())
  userId            String
  trainingProgramId String
  categoryType      ProgramCategoryType // 'MINIMALIST', 'ESSENTIALIST', 'MAXIMALIST'
  configuration     Json // Stores mapping of workout templates to selected exercise IDs
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  trainingProgram TrainingProgram @relation(fields: [trainingProgramId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([trainingProgramId])
  @@index([userId, trainingProgramId])
}

// ============================================
// NEW TRAINING PROGRAM SYSTEM MODELS
// ============================================

model TrainingSplit {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  focusAreas  String[] // e.g., ["Chest", "Back", "Shoulders"]
  difficulty  String // 'Beginner', 'Intermediate', 'Advanced'
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  trainingStructures     TrainingSplitStructure[]
  customTrainingPrograms CustomTrainingProgram[]
  programTemplates       ProgramTemplate[]

  @@index([isActive])
  @@index([difficulty])
}

model TrainingSplitStructure {
  id            String   @id @default(cuid())
  splitId       String
  daysPerWeek   Int
  pattern       String // e.g., "2 on 1 off", "every other day"
  isWeeklyBased Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  trainingSplit          TrainingSplit           @relation(fields: [splitId], references: [id], onDelete: Cascade)
  trainingDayAssignments TrainingDayAssignment[]
  customTrainingPrograms CustomTrainingProgram[]
  programTemplates       ProgramTemplate[]

  @@index([splitId])
  @@index([isWeeklyBased])
}

model TrainingDayAssignment {
  id          String   @id @default(cuid())
  structureId String
  dayOfWeek   String? // 'Monday', 'Tuesday', etc. (only for weekly-based)
  dayNumber   Int // order of day in structure
  workoutType String // e.g., "Upper", "Lower", "Chest", "Back"
  createdAt   DateTime @default(now())

  // Relations
  structure TrainingSplitStructure @relation(fields: [structureId], references: [id], onDelete: Cascade)

  @@index([structureId])
  @@index([dayNumber])
}

model CustomTrainingProgram {
  id                   String               @id @default(cuid())
  userId               String
  name                 String
  description          String               @default("")
  splitId              String
  structureId          String
  workoutStructureType WorkoutStructureType
  status               ProgramStatus        @default(DRAFT)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt

  // Relations
  user           User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  trainingSplit  TrainingSplit          @relation(fields: [splitId], references: [id])
  splitStructure TrainingSplitStructure @relation(fields: [structureId], references: [id])
  workouts       Workout[]

  @@index([userId])
  @@index([splitId])
  @@index([structureId])
}

model Workout {
  id           String   @id @default(cuid())
  programId    String
  name         String
  type         String // e.g., "Upper A", "Lower", "Chest"
  assignedDays String[] @default([]) // array of day names
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  program   CustomTrainingProgram @relation(fields: [programId], references: [id], onDelete: Cascade)
  exercises WorkoutExercise[]

  @@index([programId])
}

model WorkoutExercise {
  id           String   @id @default(cuid())
  workoutId    String
  exerciseId   String
  sets         Int
  reps         String // e.g., "8-12"
  isUnilateral Boolean  @default(false)
  order        Int // for ordering in workout
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  workout  Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id])

  @@index([workoutId])
  @@index([exerciseId])
  @@index([workoutId, order])
}

// ============================================
// SUBSCRIPTION TIER FEATURES
// ============================================

model SubscriptionTierFeature {
  id           String           @id @default(cuid())
  tier         SubscriptionTier
  featureName  String // e.g., "custom_programs", "ai_interactions", "workout_logging"
  featureLimit Int // -1 for unlimited, 0 for disabled, positive for limit
  resetPeriod  String? // "daily", "monthly", "yearly", null for one-time limits
  description  String?
  isActive     Boolean          @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@unique([tier, featureName])
  @@index([tier])
  @@index([isActive])
}

// ============================================
// AI ASSISTANT INTERACTION LOGS
// ============================================

model AIAssistantLog {
  id              String   @id @default(cuid())
  userId          String
  sessionId       String? // Optional session grouping
  interactionType String // "chat", "program_generation", "workout_review", "exercise_suggestion"
  userMessage     String // User's input/question
  assistantReply  String // AI's response
  tokensUsed      Int? // Token count for rate limiting
  modelUsed       String? // Model name used (gemini-2.5-flash, gemini-2.5-pro)
  responseTime    Int? // Response time in milliseconds
  wasSuccessful   Boolean  @default(true)
  errorMessage    String? // Error details if failed
  metadata        Json? // Additional context: program_id, exercise_ids, etc.
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([userId, createdAt])
  @@index([sessionId])
  @@index([interactionType])
  @@index([createdAt])
}

